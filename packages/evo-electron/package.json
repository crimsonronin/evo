{
  "name": "@evo/electron",
  "productName": "EVO: Electron App",
  "description": "Enhanced Vision Overlays and heads up displays for iRacing Apps",
  "version": "0.0.1",
  "contributors": [
    {
      "name": "Josh Stuart",
      "email": "joshstuartx@gmail.com"
    }
  ],
  "private": true,
  "main": "init.js",
  "scripts": {
    "clean": "rimraf ./build",
    "clean:dist": "rimraf ./dist",
    "build": "yarn clean && cross-env NODE_ENV=production webpack --mode production --config webpack.config.js",
    "start": "electron ./build/main",
    "package": "electron-builder --win",
    "package:win": "electron-builder --win --x64"
  },
  "dependencies": {
    "@evo/common": "0.0.1",
    "@evo/server": "0.0.1",
    "@evo/client": "0.0.1",
    "electron-config": "1.0.0"
  },
  "devDependencies": {
    "electron": "2.0.7",
    "electron-builder": "20.27.1",
    "electron-devtools-installer": "2.2.4"
  },
  "engines": {
    "node": ">=10"
  }
}
