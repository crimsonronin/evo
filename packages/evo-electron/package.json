{
  "name": "@evo/electron",
  "productName": "EVO: Electron App",
  "description": "Enhanced Vision Overlays and heads up displays for iRacing Apps",
  "version": "0.0.1",
  "contributors": [
    {
      "name": "Josh Stuart",
      "email": "joshstuartx@gmail.com"
    }
  ],
  "private": true,
  "homepage": "./",
  "main": "build/app/index.html",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "yarn clean && cross-env NODE_ENV=production webpack --mode production --config webpack.config.js",
    "start": "electron ./build/main",
    "package": "yarn build && electron-builder build --publish never",
    "package:win": "yarn build && electron-builder build --win --x64"
  },
  "dependencies": {
    "@evo/common": "0.0.1",
    "@evo/server": "0.0.1",
    "@evo/client": "0.0.1",
    "electron-config": "1.0.0"
  },
  "devDependencies": {
    "electron": "2.0.7",
    "electron-builder": "20.27.1",
    "electron-devtools-installer": "2.2.4"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=9"
  }
}
