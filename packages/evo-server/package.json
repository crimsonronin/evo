{
    "name": "@evo/server",
    "productName": "EVO: Server",
    "description": "A server which grabs data from iRacing",
    "version": "0.0.1",
    "contributors": [
        {
            "name": "Josh Stuart",
            "email": "josh.stuart@horizonstate.com"
        }
    ],
    "private": true,
    "main": "build/src/index.js",
    "scripts": {
        "build": "yarn build:clean && yarn build:lib && yarn build:config",
        "build:clean": "rm -rf ./build",
        "build:config": "cross-env NODE_ENV=production BABEL_ENV=production babel config --out-dir ./build/config",
        "build:server": "cross-env NODE_ENV=production BABEL_ENV=production babel ./server.js --out-file ./build/server.js",
        "build:lib": "cross-env NODE_ENV=production BABEL_ENV=production babel src --out-dir ./build/src"
    },
    "dependencies": {
        "@evo/common": "0.0.1",
        "@evo/irsdk": "0.0.1",
        "express": "4.16.3",
        "ws": "6.0.0"
    },
    "devDependencies": {
        "pm2": "3.0.3"
    },
    "engines": {
        "node": ">=10"
    }
}
