{
    "name": "@evo/server",
    "productName": "EVO: Server",
    "description": "A server which grabs data from iRacing",
    "version": "0.0.1",
    "contributors": [
        {
            "name": "Josh Stuart",
            "email": "josh.stuart@horizonstate.com"
        }
    ],
    "private": true,
    "main": "./build/server.js",
    "scripts": {
        "build": "yarn build:clean && yarn build:lib && yarn build:config && yarn build:server",
        "build:clean": "rm -rf ./build",
        "build:config": "cross-env NODE_ENV=production BABEL_ENV=production babel config --out-dir ./build/config",
        "build:server": "cross-env NODE_ENV=production BABEL_ENV=production babel ./server.js --out-file ./build/server.js",
        "build:lib": "cross-env NODE_ENV=production BABEL_ENV=production babel lib --out-dir ./build/lib",
        "start": "pm2 start ./build/server.js",
        "stop": "pm2 stop ./build/server.js",
        "start:dev": "pm2 start ./server.js --watch && pm2 logs server",
        "stop:dev": "pm2 stop ./server.js",
        "ps": "pm2 list",
        "format": "./node_modules/.bin/prettier --write \"lib/**/*.{js,jsx,json,css,md}\""
    },
    "dependencies": {
        "express": "4.16.3",
        "ws": "6.0.0"
    },
    "devDependencies": {
        "babel-cli": "6.26.0",
        "babel-plugin-module-resolver": "3.1.1",
        "babel-preset-env": "1.7.0",
        "babel-preset-react-app": "3.1.2",
        "babel-register": "6.26.0",
        "cross-env": "^5.2.0",
        "eslint": "5.2.0",
        "node-irsdk": "2.1.3",
        "pm2": "3.0.3",
        "prettier": "1.12.1"
    },
    "engines": {
        "node": ">=9"
    }
}
